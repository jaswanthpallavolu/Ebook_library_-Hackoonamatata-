<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/user_books.css">
        <link rel="stylesheet" href="/css/usernav.css">
        
    </head>
    <body onload="myFunc()">
         <!-- loading-->
      <div id="loading"></div>
        <!-- Nav bar -->
        <nav class="navbar nav navbar-expand-sm navbar-dark fixed-top">
            
            <a class="navbar-brand " href="#">USER</a>
            <ul class="navbar-nav menus">
                <li class="nav-item "><a class="nav-link" href="/user" >Home</a></li>
                <li class="nav-item active"><a class="nav-link"  href="/user/owned">Books</a></li>
                <li class="nav-item"><a class="nav-link" href="/user/about">About</a></li>
                <!-- profile -->
                
                <!-- Dropdown -->
                <li class="nav-item dropdown AA" style="position:absolute;right:10%">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTTOkHm3_mPQ5PPRvGtU6Si7FJg8DVDtZ47rw&usqp=CAU">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                     <%= user %> 
                    </a>
                    <div class="dropdown-menu">
                    <a class="dropdown-item" href="/user/logout">logout</a>  
                </li>
            </ul>  
          </nav><br><br> 
          <!-- /Nav bar-->
        
        <br><br>
        <div class="container-fluid">
            <h2 style="color:rgb(252, 252, 252)">Books owned :</h2>
            <!-- Added Books -->
            <div class="container-fluid">
                <% 
                
                var len = books.length
                var n= Math.ceil(len/4);
             for (var i=1 ;i<=n; i++) { %>
            <div class="top-grid">
                  
                <%
                   var ini = ((i-1)*4)
                   if (i==n)
                   {
                       var fin = len-1;
                   }
                   else
                   {
                       var fin = (i*4)-1
                   }
                 for (var j=ini ; j<=fin ;j++) { %>
                  
                <div class="grid-item" data-aos="fade-down">
                    <div class="i1"><a href="/user/book/<%= books[j]._id%>"><img src="<%= books[j].url %>" class="image" ></a></div>
                    <div class="stars">
                      <!-- stars-->
                      <span class="fa fa-star fa-2x checked" id=star1></span>
                      <span class="fa fa-star fa-2x checked" id=star2></span>
                      <span class="fa fa-star fa-2x checked" id=star3></span>
                      <span class="fa fa-star fa-2x" id=star4></span>
                      <span class="fa fa-star fa-2x" id=star5></span>
                    </div>
                </div>

                <% } %>
            
                
                   


                </div>
                <% } %>

            </div>
    
            
            <!-- /Added Books -->
        </div>

        <!-- stars script -->
        <script>
            AOS.init();

            var load=document.getElementById('loading');
            function myFunc(){
              load.style.display='none';
            }
        </script>

       
    </body>
</html>